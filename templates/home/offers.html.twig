                {'title':'Barcelona Experience', 'days':'4 nights, 5 days', 'price':'€600', 'rooms':'1 chambre', 'image':'https://cdn.getyourguide.com/img/tour/247fa25a3f5a618081f2916d64266b61225b2919cb3c20c36e94ebb6746c2336.jpg/145.jpg'}
            ] %}

            {% for offer in offers %}
                <div class="card mb-5 shadow-lg">
                    <div class="row g-0 align-items-center">
                        <div class="col-md-4">
                            <img src="{{ offer.image }}" class="img-fluid rounded-start" alt="{{ offer.title }}">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h2 class="card-title" style="font-size: 2rem; font-weight: bold;">{{ offer.title }}</h2>
                                <p class="card-text" style="font-size: 1.2rem;">
                                    {{ offer.days }} – <strong>{{ offer.price }}</strong> – <em>{{ offer.rooms }}</em>
                                </p>
                                <a href="#" class="btn btn-primary btn-lg">Book Now</a>

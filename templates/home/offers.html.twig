{% extends 'base.html.twig' %}

{% block title %}Travel Offers{% endblock %}

{% block body %}
<header class="top-area">
    <div class="header-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-2">
                    <div class="logo">
                        <a href="{{ path('app_home') }}">
                            TekUP<span>Travel</span>
                        </a>
                    </div><!-- /.logo-->
                </div><!-- /.col-->
            </div>      
        </div>
    </div><!-- /.header-area -->
</header><!-- /.top-area-->

<style>
body {
    background: url('{{ asset('assets/images/home/banner.jpg') }}') no-repeat center center fixed;
    background-size: cover;
    min-height: 100vh;
    color: white;
}
.page-overlay {
    background-color: rgba(0,0,0,0.4);
    min-height: 100vh;
    padding: 80px 0;
}
.card {
    background-color: rgba(255, 255, 255, 0.58);
    border-radius: 15px;
}
</style>

<div class="page-overlay">
    <div class="container">
        <h1 class="display-3 mb-5 text-center" style="font-weight: bold;">Our Travel Offers</h1>

        <div class="offers-list">
            {% for key, offer in offers %}
                <div class="card mb-5 shadow-lg">
                    <div class="row g-0 align-items-center">
                        <div class="col-md-4">
                            <img src="{{ offer.image }}" class="img-fluid rounded-start" alt="{{ offer.destination }}">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h2 class="card-title" style="font-size: 2rem; font-weight: bold;">{{ offer.destination }}</h2>
                                <p class="card-text" style="font-size: 1.2rem;">
                                    Prix: â‚¬{{ offer.price }}
                                </p>
                                <a href="{{ path('app_description', {'destination': offer.destination}) }}" class="btn btn-primary btn-lg">Book Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <p>Aucune offre disponible pour le moment.</p>
            {% endfor %}
        </div>
    </div>
</div>

<footer class="footer-copyright">
    <div class="container">
        <div class="footer-content">
            <div class="row">
                <div class="col-sm-3">
                    <div class="single-footer-item">

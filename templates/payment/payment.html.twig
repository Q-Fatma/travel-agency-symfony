{% extends 'base.html.twig' %}

{% block title %}Payment {% endblock %}

{% block body %}

</style>
<!-- Payment Form Section -->
<section class="payment-section" style="padding:60px 0; background:#f8f9fa;">
    <div class="container" style="max-width: 850px; margin:auto;">

        <div class="payment-card" style="
            background:white;
            padding:40px;
            border-radius:12px;
            box-shadow:0 4px 20px rgba(0,0,0,0.1);
        ">

            <h2 style="margin-bottom:25px;">Payment Details</h2>

            <!-- STATIC FORM ‚Äî NO ROUTE -->
           <form method="post" action="{{ path('app_payment') }}">
                <!-- Personal Info -->
                 <h4 style="margin-bottom:15px; font-weight:bold;">üßç Personal Information</h4>


                <div class="row">
                    <div class="col-md-6" style="margin-bottom:20px;">
                        <label>First Name</label>
                        <input type="text" name="firstName" required class="form-control" placeholder="Enter your first name">
                    </div>

                    <div class="col-md-6" style="margin-bottom:20px;">
                        <label>Last Name</label>
                        <input type="text" name="lastName" required class="form-control" placeholder="Enter your last name">
                    </div>

                    <div class="col-md-12" style="margin-bottom:20px;">
                        <label>Email</label>
                        <input type="email" name="email" required class="form-control" placeholder="example@email.com">
                    </div>
                </div>

                <hr style="margin: 35px 0;">

                <!-- Payment Info -->
                <h4 style="margin-bottom:15px; font-weight:bold;">üí≥ Card Information</h4>

                <div class="row">
                    <div class="col-md-12" style="margin-bottom:20px;">
                        <label>Card Number</label>
                        <input type="text" name="cardNumber" maxlength="16" required class="form-control" placeholder="xxxx xxxx xxxx xxxx">
                    </div>

                    <div class="col-md-6" style="margin-bottom:20px;">
                        <label>Expiry Date</label>
                        <input type="text" name="expiry" maxlength="5" required class="form-control" placeholder="MM/YY">
                    </div>

                    <div class="col-md-6" style="margin-bottom:20px;">
                        <label>CVC</label>
                        <input type="text" name="cvc" maxlength="3" required class="form-control" placeholder="123">
                    </div>
                </div>

                <hr style="margin: 35px 0;">

                <!-- Payment Summary -->
                <h4 style="margin-bottom:15px;">Summary</h4>

                <div style="background:#f1f1f1; padding:20px; border-radius:8px; margin-bottom:25px;">
                    <p style="margin:0; font-size:18px;">
                        <strong>Total:</strong>   totalPrice  TND
                    </p>
                </div>

                <button type="submit" class="btn btn-primary" style="
                    width:100%;
                    padding:12px;
                    font-size:18px;
                    border-radius:8px;
                ">
                    Confirm Payment
                </button>

            </form>
        </div>
    </div>
</section>
{% endblock %}

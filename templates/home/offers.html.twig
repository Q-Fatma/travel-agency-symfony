                {'title':'Istanbul Adventure', 'days':'5 nights, 6 days', 'price':'€750', 'rooms':'Double', 'image':'https://www.momondo.de/discover/wp-content/uploads/sites/264/2022/12/DEST_TURKEY_ISTANBUL_GALATA_TOWER_GettyImages-1026029900-1536x1050.jpg'},
                {'title':'London Escape', 'days':'4 nights, 5 days', 'price':'€650', 'rooms':'1 chambre', 'image':'https://www.celebritycruises.com/content/dam/celebrity/city-stays/1040-london-city-stays-overall-80-opacity.jpg'},
